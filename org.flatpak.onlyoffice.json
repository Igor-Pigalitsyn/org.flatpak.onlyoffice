{
    "app-id": "org.flatpak.onlyoffice",
    "base": "io.atom.electron.BaseApp",
    "base-version": "18.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "onlyoffice",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-desktop",
        "--filesystem=xdg-videos",
        "--filesystem=xdg-documents",
        "--filesystem=xdg-download",
        "--device=all"
    ],
    "modules": [
        {
            "name": "onlyoffice",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 apply_extra /app/bin/apply_extra",
                "install -Dm755 onlyoffice /app/bin/onlyoffice",
                "cp /usr/bin/ar /app/bin",
                "ARCH_TRIPLE=$(gcc --print-multiarch) && cp /usr/lib/${ARCH_TRIPLE}/libbfd-*.so /app/lib"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "ar x onlyoffice-desktopeditors_amd64.deb",
                        "tar xf data.tar.xz",
                        "mv opt/onlyoffice .",
                        "mkdir -p export/share/applications",
                        "sed 's|Icon=.*|Icon=org.flatpak.onlyoffice|; s|Exec=.*|Exec=onlyoffice|;' usr/share/applications/desktopeditors.desktop > export/share/applications/org.flatpak.onlyoffice.desktop",
                        "echo 'StartupWMClass=onlyoffice' >> export/share/applications/org.flatpak.onlyoffice.desktop",
                        "for icon_size in 16 24 32 48 64 128 256; do
                            install -Dm644 onlyoffice/desktopeditors/asc-de-${icon_size}.png export/share/icons/hicolor/${icon_size}x${icon_size}/apps/org.flatpak.onlyoffice.png
                        done",
                        "rm -r onlyoffice-desktopeditors_amd64.deb control.tar.gz data.tar.xz debian-binary opt usr"
                    ]
                },
                {
                    "type": "extra-data",
                    "filename": "onlyoffice-desktopeditors_amd64.deb",
                    "url": "https://github.com/ONLYOFFICE/DesktopEditors/releases/download/ONLYOFFICE-DesktopEditors-5.4.1-2/onlyoffice-desktopeditors_amd64.deb",
                    "sha256": "228251c720a8e679ce888b3db5c2f286d5e8657d02a193575b6d9cd7c8847402",
                    "size": 379051294
                },
                {
                    "type": "script",
                    "dest-filename": "onlyoffice",
                    "commands": [
                      "export LD_LIBRARY_PATH=./:$LD_LIBRARY_PATH",
                      "cd /app/extra/onlyoffice/desktopeditors/",
                      "exec ./DesktopEditors $@"
                    ]
                }
            ]
        }
    ]
}